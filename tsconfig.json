{
  "compilerOptions": {
    "target": "ES2020", // Atualizado para uma versão mais moderna do ES
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // Mantido como CommonJS
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Alterado para "react-jsx" para suportar a nova sintaxe JSX
    "incremental": true,
    "moduleResolution": "node",
    "baseUrl": ".", // Adicionado para facilitar importações absolutas
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.setup.ts" // Certifique-se de incluir o setup do Jest
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts", // Opcional: Exclui arquivos de teste durante a compilação
    "**/*.test.tsx" // Opcional: Exclui arquivos de teste durante a compilação
  ]
}
